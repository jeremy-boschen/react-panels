# Ensure optional dependencies are installed
optional=true

# Use legacy peer dependency resolution (more reliable)
legacy-peer-deps=false

# NPM registry configuration (works with both npm and yarn)
registry=https://registry.npmjs.org/

# Authentication token will be read from environment variable NPM_TOKEN
# or set directly here (not recommended for public repos)
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}
